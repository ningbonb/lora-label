{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "sourceMap": false,
    "target": "es2016",
    "newLine": "LF",
    "useDefineForClassFields": false,
    "module": "esnext",
    "moduleResolution": "node",
    "allowJs": false,
    "strict": true,
    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": false,
    "importHelpers": true,
    "jsx": "preserve",
    "lib": ["esnext", "dom"],
    //    "types": ["vitest/globals", "puppeteer", "node"],
    "types": ["node"],
    "rootDir": ".",
    "paths": {
      "tslib": ["path/to/node_modules/tslib/tslib.d.ts"],
      "core": ["packages/core/src"]
    }
  },
  "include": [
    "packages/global.d.ts",
    "packages/*/src",
    "packages/*/__tests__",
    "test-dts"
  ]
}
